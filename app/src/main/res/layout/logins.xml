<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:background="@drawable/ic_woodasvg"
    android:layout_height="match_parent">
    <ImageView
        app:srcCompat="@drawable/entre"
        android:layout_marginTop="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:textColor="#234232"
        android:textAlignment="center"
        android:text="Enter the Framework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/unnamec"
        android:textAlignment="center"
        android:layout_marginTop="30sp"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:background="@drawable/backing"
        android:textColor="#0a2149"
        android:layout_marginLeft="0dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:hint="PassWord"
            android:background="@drawable/backing"
            android:textAlignment="center"
            android:id="@+id/unpassec"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:textColor="#0a2149"
            android:inputType="numberPassword"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            app:srcCompat="@drawable/visible"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/unlockc"
        app:srcCompat="@drawable/login"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:layout_marginLeft="0dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/descriptivelor"
        android:text="Log In"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>












