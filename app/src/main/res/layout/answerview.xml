        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="#6695dd10"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp">

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/comansa"
                    android:text="comment"
                    android:singleLine="true"
                    android:layout_alignRight="@+id/alltda"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#457383"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="3dp"
                android:id="@+id/answerbodya"
                android:textSize="15sp"
                android:textColor="#0a2149"
                android:textStyle="normal"
                android:minWidth="140dp"
                android:text="se33333333333333333333tttt"
                android:layout_below="@+id/comansa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/alltda"
                android:layout_alignRight="@+id/answerbodya"
                android:layout_below="@+id/answerbodya"
                android:orientation="horizontal"
                android:layout_marginRight="5dp"
                android:layout_width="190dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_gravity="end|center_vertical"
                        android:textAlignment="textEnd"
                        android:id="@+id/datera"
                        android:layout_marginRight="1dp"
                        android:textColor="@android:color/holo_orange_dark"
                        android:text="monday 4 feburuary 2019"
                        android:textSize="9sp"
                        android:layout_width="wrap_content"
                        android:layout_height="11dp" />
                <TextView
                    android:textSize="15sp"
                    android:text="|"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="start|center_vertical"
                            android:textAlignment="textStart"
                            android:id="@+id/timera"
                            android:textColor="@android:color/holo_blue_dark"
                            android:text="7465AM"
                            android:textSize="9sp"
                            android:layout_width="wrap_content"
                            android:layout_height="11dp" />
            </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:layout_alignBottom="@+id/alltda"
                android:visibility="gone"
                android:layout_marginLeft="3dp"
                android:id="@+id/youranswerpending"
                app:srcCompat="@drawable/timeb"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/imageholderb"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/relimageb"
            android:layout_below="@id/card_viewa"
