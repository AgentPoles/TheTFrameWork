                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:id="@+id/daterac"
                    android:gravity="right|end"
                    android:layout_marginRight="1dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="monday 4 feburuary 2019"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="11dp" />
                    <TextView
                        android:layout_gravity="end"
                        android:textAlignment="textEnd"
                        android:id="@+id/timerac"
                        android:gravity="end|right"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="7 65AM"
                        android:textSize="9sp"
                        android:layout_width="wrap_content"
                        android:layout_height="11dp" />
            </LinearLayout>

            <ImageView
                android:layout_below="@+id/alltdac"
                android:scaleType="fitXY"
                android:id="@+id/recyclerimageanswwerb"
                android:maxHeight="210dp"
                android:layout_width="match_parent"
                android:layout_height="210dp" />

            <ProgressBar
                android:contentDescription="for reaload"
