
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context="com.mycompany.myapp.thetframework.FragmentSecond">
<!-- TODO: Update blank fragment layout -->

<RelativeLayout
    android:layout_marginBottom="80dp"
    android:layout_marginTop="80dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_margin="20dp"
        app:srcCompat ="@drawable/schoolbeta"
        android:id="@+id/imagee"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>
<android.support.constraint.ConstraintLayout
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/assk"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:text="All in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/proceed"
        android:layout_width="50dp"
        app:srcCompat="@drawable/next"
        android:layout_above="@+id/stormite"
        app:backgroundTint="@color/transchatmilk"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/stormite"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/holo_green_light"
        android:layout_marginRight="30dp"
        android:text="myClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
</FrameLayout>