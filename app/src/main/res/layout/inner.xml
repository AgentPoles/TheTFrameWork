        android:layout_below="@+id/framequestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linloc"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:id="@+id/datree"
                    android:textColor="#0a2149"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="monday 4 feburuary 2019"
                    android:textSize="13sp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:id="@+id/timre"
                    android:textColor="#0a2149"
                    android:text="7 65AM"

                    android:textSize="13sp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:textSize="50sp"
                android:text="|"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/useredetails"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ausernameee"
                        android:text="kelvin ewingare"
                        android:textSize="13sp"
                        android:layout_gravity="end"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp" />
                    <TextView
                        android:id="@+id/useranumber"
                        android:text="09837363333"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:layout_gravity="end"
                        android:textAlignment="textEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/useraemail"
                        android:textColor="#4051b6"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:textAlignment="textEnd"
                        android:text="pauloams163gmail"
                        android:textSize="13sp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/reluserdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="gone"
                android:id="@+id/innerquepending"
                android:layout_alignBottom="@+id/showfullquestion"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/timeb"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <ImageView
                android:visibility="visible"
                android:clickable="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/showfullquestion"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/slide_down"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/answerrecyclerview"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/relenteraa"
        android:layout_below="@id/scroicony"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
