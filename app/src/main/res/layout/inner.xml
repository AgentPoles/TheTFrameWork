            android:visibility="gone"
            app:srcCompat="@drawable/sendee"
            app:backgroundTint="@android:color/holo_green_dark"
            android:layout_marginLeft="10dp"
            android:layout_height="45dp" />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="45dp"
            app:srcCompat="@drawable/sendee"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            app:backgroundTint="@color/chatmilk"
            android:layout_marginLeft="10dp"
            android:layout_height="45dp" />
        <RelativeLayout
            android:visibility="invisible"
            android:layout_marginTop="7dp"
            android:background="@drawable/backit"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:layout_height="wrap_content">
            <EditText
                android:hint="Provide your answer"
                android:textColorHint="#0a2149"
                android:textColor="#0a2149"
                android:layout_marginRight="6dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:background="@drawable/backii"
                android:layout_marginTop="0dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/gallery"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
