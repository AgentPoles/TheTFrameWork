        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text=" how ddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddo i find the internal inductance of a current carrying conductor"
