               android:id="@+id/previous"
                app:srcCompat="@drawable/upi"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>
        <uk.co.senab.photoview.PhotoView
