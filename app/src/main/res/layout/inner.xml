            android:layout_weight="2"
            android:id="@+id/introaskis"
            android:hint="Provide,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,ddddddddddddddddddddddddddddddddddddddddddddddddddddur answer"
            android:textColorHint="#0a2149"
            android:textColor="#0a2149"
            android:layout_marginRight="6dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_gravity="bottom"
            android:background="@drawable/tipbacki"
            android:id="@+id/gretimage"
            android:layout_toRightOf="@+id/introaskis"
            android:layout_alignBottom="@+id/introaskis"
            android:layout_marginTop="0dp"
            android:layout_marginRight="3dp"
            app:srcCompat="@drawable/gallery"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/sendcommians"
            android:layout_width="45dp"
            android:layout_gravity="end|bottom"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/sendee"
            android:layout_toRightOf="@+id/quennys"
            app:backgroundTint="@color/chatmilk"
            android:layout_marginLeft="10dp"
            android:layout_height="45dp" />
