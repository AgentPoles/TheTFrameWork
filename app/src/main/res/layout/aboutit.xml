<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:padding="10dp"
    android:background="@drawable/ic_woodasvg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:id="@+id/abouttalk"
    android:textSize="16sp"
    android:textAlignment="center"
    android:text="@string/about_talk"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/bettlie"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/abouttalk"
        app:srcCompat="@drawable/ski"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/skiit"
        android:textStyle="bold|italic"
        android:layout_marginTop="3dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bettlie"
        android:text="Ski_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/poless"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/skiit"
        android:text="POLES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>